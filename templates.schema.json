{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Fabr Templates Configuration",
	"description": "Configuration file defining available project templates for Fabr",
	"type": "object",
	"properties": {
		"$schema": {
			"type": "string",
			"description": "JSON Schema reference"
		},
		"templates": {
			"type": "array",
			"description": "Array of available project templates",
			"items": {
				"$ref": "#/definitions/template"
			},
			"minItems": 1
		},
		"defaultTemplate": {
			"type": "string",
			"description": "The default template to select (must match a template slug)"
		}
	},
	"required": ["templates"],
	"definitions": {
		"template": {
			"type": "object",
			"description": "A single project template definition",
			"properties": {
				"name": {
					"type": "string",
					"description": "Display name of the template",
					"minLength": 1
				},
				"slug": {
					"type": "string",
					"description": "Unique identifier for the template",
					"pattern": "^[a-z0-9][a-z0-9-]*[a-z0-9]$|^[a-z0-9]$",
					"minLength": 1
				},
				"repo": {
					"type": "string",
					"description": "GitHub repository (owner/repo format) or full URL",
					"pattern": "^([a-zA-Z0-9_.-]+/[a-zA-Z0-9_.-]+)|(https?://[^\\s]+)$"
				}
			},
			"required": ["name", "slug", "repo"],
			"additionalProperties": false
		}
	},
	"additionalProperties": false,
	"examples": [
		{
			"$schema": "./templates.schema.json",
			"templates": [
				{
					"name": "React TypeScript App",
					"slug": "react-typescript",
					"repo": "facebook/create-react-app"
				},
				{
					"name": "Express REST API",
					"slug": "express-api",
					"repo": "expressjs/express-starter"
				}
			],
			"defaultTemplate": "react-typescript"
		}
	]
}
